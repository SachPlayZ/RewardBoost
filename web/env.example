# Quest Rewards Platform Environment Variables

# =============================================================================
# BLOCKCHAIN CONFIGURATION
# =============================================================================

# SEI Network Configuration
NEXT_PUBLIC_CHAIN_ID=sei-testnet-2
NEXT_PUBLIC_RPC_URL_SEI_TESTNET=https://evm-rpc-testnet.sei-apis.com
NEXT_PUBLIC_RPC_URL_SEI_MAINNET=https://rpc.sei.com

# Contract Addresses (Update with your deployed contracts)
NEXT_PUBLIC_QUEST_REWARDS_CONTRACT_ADDRESS=0x742d35Cc6635C0532925a3b8D7Fb8d22567b9E52

# Token Contract Addresses
NEXT_PUBLIC_USDC_CONTRACT_ADDRESS=0x...  # USDC token address on SEI
NEXT_PUBLIC_SEI_CONTRACT_ADDRESS=0x...   # SEI token address

# =============================================================================
# WALLET CONNECT CONFIGURATION
# =============================================================================

# WalletConnect Project ID (Get from https://cloud.walletconnect.com)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your_walletconnect_project_id

# =============================================================================
# API & BACKEND CONFIGURATION
# =============================================================================

# Backend API Base URL
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
API_BASE_URL=http://localhost:3000/api

# Database Configuration (if using a database)
DATABASE_URL=postgresql://username:password@localhost:5432/questrewards
DATABASE_DIRECT_URL=postgresql://username:password@localhost:5432/questrewards

# =============================================================================
# AI INTEGRATION (Optional)
# =============================================================================

# OpenAI Configuration (for AI content generation)
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000

# Alternative AI Services
ANTHROPIC_API_KEY=sk-...
GEMINI_API_KEY=...

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================

# Twitter/X API Configuration (for post verification)
TWITTER_API_KEY=...
TWITTER_API_SECRET=...
TWITTER_ACCESS_TOKEN=...
TWITTER_ACCESS_TOKEN_SECRET=...
TWITTER_BEARER_TOKEN=...

# =============================================================================
# STORAGE & UPLOADS
# =============================================================================

# Image Upload Configuration
NEXT_PUBLIC_UPLOAD_ENDPOINT=https://your-storage.com/upload
UPLOADTHING_SECRET=sk_live_...  # If using UploadThing
UPLOADTHING_APP_ID=your-app-id

# AWS S3 Configuration (alternative)
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_S3_BUCKET_NAME=questrewards-uploads
AWS_S3_REGION=us-east-1

# =============================================================================
# PLATFORM CONFIGURATION
# =============================================================================

# Platform Fees (in USD)
PLATFORM_FEE_FLAT=5
PLATFORM_FEE_PERCENTAGE=0

# XP Reward Configuration
XP_FOLLOW_TASK=10
XP_POST_TASK=50
XP_VERIFIED_MULTIPLIER=2
XP_QUEST_COMPLETION=100

# Campaign Limits
MAX_CAMPAIGN_DURATION_DAYS=7
MAX_PARTICIPANTS_LIMIT=10000
MIN_REWARD_AMOUNT=1

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Analytics Configuration
GOOGLE_ANALYTICS_ID=G-...
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-...

# Error Monitoring
SENTRY_DSN=https://...@sentry.io/...
NEXT_PUBLIC_SENTRY_DSN=https://...@sentry.io/...

# =============================================================================
# THIRD-PARTY SERVICES
# =============================================================================

# Email Service (for notifications)
RESEND_API_KEY=re_...
SENDGRID_API_KEY=SG...

# Redis (for caching and sessions)
REDIS_URL=redis://localhost:6379

# =============================================================================
# SECURITY & AUTHENTICATION
# =============================================================================

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRY=7d

# Session Configuration
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=development
NEXT_PUBLIC_ENVIRONMENT=development

# Debug Configuration
DEBUG_MODE=true
ENABLE_LOGGING=true

# Local Development Ports
PORT=3000
DEV_SERVER_PORT=3000

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================

# Domain Configuration
NEXT_PUBLIC_APP_URL=https://yourdomain.com
NEXT_PUBLIC_APP_NAME="QuestRewards"

# SSL Configuration
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
